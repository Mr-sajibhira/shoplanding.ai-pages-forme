<style>
.id_{{ section.id }}{
  max-width:100%;
  width:100%;
  padding:60px 0px;
  background-color:#000000;
}
.id_{{ section.id }} .container{
  max-width:1200px;
  width:100%;
  margin:0px auto;
  
}
.id_{{ section.id }} .container .row{

    display: flex;
    flex-wrap: wrap;
    margin:-15px;
}  
.id_{{ section.id }} .container .row .col{
  max-width:33.33%;
  width:100%;
  padding:15px;
  box-sizing: border-box;
  
} 

 .id_{{ section.id }} h3{
    font-size: 40px;
    line-height: 130%;
    font-weight: 700;
    color: #ffffff;
    margin: 0px 0px 30px 0px;
    text-align: center;
   
   
} 
 .id_{{ section.id }} .review_box{
   padding:20px;
    border-radius: 5px;
    box-sizing: border-box;
    background-color:#ffffff;
   height:100%;
 }
 .id_{{ section.id }} .review{
    display:flex;
    gap:5px;
   margin:0px 0px 10px 0px;
 }
.id_{{ section.id }}  .review svg{
     fill:#000000;
  }
.id_{{ section.id }}  .title_box{
  display:flex;
  align-items: center;
   margin:0px 0px 15px 0px;
}
.id_{{ section.id }}  .title_box h3{
    display: inline-block;
     font-size: 20px;
    line-height: 150%;
    font-weight: 700;
    color: #000000;
    margin: 0px 10px 0px 0px;
}
.id_{{ section.id }} .verified{
    font-size: 12px;
    line-height: 100%;
    font-weight: 400;
    color: #ffffff;
    margin: 0px 0px 0px 0px;
    text-align: center;
    padding:6px 16px;
   border-radius: 30px;
   background-color:#000000;
  display: flex;
  justify-content: center;
   align-items: center;
}
  
 
 .id_{{ section.id }} p{
    font-size: 14px;
    line-height: 150%;
    font-weight: 400;
    color: #000000;
    margin: 0px 0px 0px 0px;
} 
  



@media(max-width:768px){
  
  .id_{{ section.id }}{
    padding:40px 20px;
  }
  
.id_{{ section.id }} .container .row{
    margin:-15px;
    justify-content: center;
  }
  
.id_{{ section.id }} .container .row .col{
  max-width:100%;
  padding:15px;
}


  .id_{{ section.id }} h3{
    font-size: 30px;
}  
 .id_{{ section.id }} .review{
    justify-content: center;
 }
 .id_{{ section.id }}  .title_box {
     gap:10px;
    flex-direction: column;
}
.id_{{ section.id }}  .title_box h3{
     font-size: 24px;
    margin: 0px 0px 0px 0px;
}

.id_{{ section.id }} p {
    font-size: 16px;
    text-align: center;
}
.id_{{ section.id }} .verified{
    font-size: 14px;
}
  
 } /*media query */
  
</style>



