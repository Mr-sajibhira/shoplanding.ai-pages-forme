<style>
.id_{{ section.id }}{
  max-width:100%;
  width:100%;
  padding:60px 0px;
  background-color:#ffffff;
}
.id_{{ section.id }} .container{
  max-width:1200px;
  width:100%;
  margin:0px auto;
  text-align: center;
  
}
.id_{{ section.id }} .container .row{
    display: flex;
    flex-wrap: wrap;
    margin:-20px;
}  
.id_{{ section.id }} .container .row .col{
  max-width:25%;
  width:100%;
  padding:20px;
  box-sizing: border-box;
} 


  
.id_{{ section.id }} h2{
    font-size: 40px;
    line-height: 130%;
    font-weight: 700;
    color: #24272A;
    margin: 0px 0px 50px 0px;
   text-align: center;
}
   .id_{{ section.id }} h3{
    font-size: 24px;
    line-height: 120%;
    font-weight: 600;
    color: #24272A;
    margin: 0px 0px 5px 0px;
    text-align: center;
} 
  
 .id_{{ section.id }} p{
    font-size: 18px;
    line-height: 150%;
    font-weight: 400;
    color: #0A0000;
    margin: 0px 0px 0px 0px;
    text-align: center;
} 

  
.id_{{ section.id }} .btn{
    display: inline-block;
    text-decoration: none;
    transition-duration:.3s;
    background-color: #000000;
    color:#ffffff;
     padding: 8px 24px;
    border: 1px solid #000000;
    font-size: 18px;
    font-weight: 400;
    line-height: 150%;
    border-radius: 4px;
    margin:50px 0px 0px 0px;   
}
.id_{{ section.id }} .btn:hover{
    background-color: #ec7e8b;
     color:#ffffff;
   border: 1px solid #ec7e8b;
}  

.id_{{ section.id }} img{
  max-width:55px;
  width:100%;
  dispaly:block;
  object-fit: cover;
   display: block;
   aspect-ratio: 1/1;
  margin:0px auto 15px;
}

@media(max-width:768px){
  
  .id_{{ section.id }}{
    padding:40px 20px;
  }
  
  .id_{{ section.id }} .container .row{
    margin:-10px;
  }
.id_{{ section.id }} .container .row .col{
  max-width:50%;
  padding:10px;
}
  .id_{{ section.id }} img{
  max-width:50px;
  margin:0px auto 10px;
}

  .id_{{ section.id }} h3{
    font-size: 20px;
}

  .id_{{ section.id }} h2{
    font-size: 30px;
    margin: 0px 0px 35px 0px;
}
.id_{{ section.id }} p{
    font-size: 18px;
}
  

  .id_{{ section.id }} .btn{
    font-size: 16px;
    margin:30px 0px 0px 0px;
}
  .id_{{ section.id }} .btn svg{
   width:16px;
    height:16px;
}

  
 } /*media query */
  
</style>



<section class="id_{{ section.id }}">
  <div class="container">
      {% if section.settings.title != blank %}
           <h2>{{ section.settings.title }}</h2>
    {% endif %}
    
     <div class="row">
         {% for block in section.blocks %}
          {% case block.type %}
            {% when 'icon_box' %}
              <div class="col">
                <div class="icon_box">  
                    {% if block.settings.img != blank %}
                          <img src="{{ block.settings.img | image_url }}" alt="{{ block.settings.img.alt }}"
                           width="100%" height="100%">
                      {% endif %}  
                   {% if block.settings.title != blank %}
                       <h3>{{ block.settings.title }}</h3>
                    {% endif %}
                   {% if block.settings.des != blank %}
                       <p>{{ block.settings.des }}</p>
                    {% endif %}
              </div>
          </div>

         {% endcase %}
       {% endfor %}
           </div>
     {% for block in section.blocks %}
          {% case block.type %}
              {% when 'buttom' %}
               {% if block.settings.btn_url != blank %}
                   <a class="btn" href="{{ block.settings.btn_url }}">
                     <svg style="margin:0px 5px 0px 0px;" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://www.w3.org/2000/svg" height="18" width="18" classname="w-6 h-6" viewBox="0 0 512 512" fill="currentColor">
                    <path fill="#EFECEC" strokelinecap="round" strokelinejoin="round" d="M0 48A16 16 0 0 1 16 32H64a16 16 0 0 1 15.52 12.128L92.48 96H464a16 16 0 0 1 15.712 18.944l-48 256A16 16 0 0 1 416 384H128a16 16 0 0 1 -15.712 -13.056L64.32 115.424 51.52 64H16a16 16 0 0 1 -16 -16zM99.264 128l42.016 224h261.44l42.016 -224H99.264zM160 384a64 64 0 1 0 0 128 64 64 0 0 0 0 -128zm224 0a64 64 0 1 0 0 128 64 64 0 0 0 0 -128zm-224 32a32 32 0 1 1 0 64 32 32 0 0 1 0 -64zm224 0a32 32 0 1 1 0 64 32 32 0 0 1 0 -64z"/></svg>
                    {{ block.settings.btn_text }}
                      </a>
               {% endif %}
         {% endcase %}
   {% endfor %}
                      
  </div>
</section>






{% schema %}
  {
    "name": "Forme Icon Box",
    "settings": [
       {
        "type": "text",
        "label": "Title",
        "id": "title",
        "default":"Unlock A Superior You with FormeÂ®"
      }
    ],
    "blocks": [
      {
        "type": "icon_box",
        "name":"Icon Box",
        "limit": 4,
        "settings": [
          {
            "type": "image_picker",
            "label": "Select Image",
            "id": "img"
          },
          {
          "type": "text",
          "label": "Title",
          "id": "title"
         },
          {
          "type": "text",
          "label": "Description",
          "id": "des"
         }

        ]
      },
      {
        "type": "buttom",
         "name":"Buttom",
        "limit": 1,
        "settings": [
      {
        "type": "text",
        "label": "Buttom Text",
        "id": "btn_text",
        "default":"TRY NOW"
      },
      {
        "type": "url",
        "label": "Buttom Url",
        "id": "btn_url"
      },
        ]
      }
    ],
    "presets": [
      {
        "name": "Forme Icon Box"
      }
    ]
  }
{% endschema %}